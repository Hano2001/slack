<h1>ADMIN PAGE</h1>
<% for(item of users) {%>

<div class="admin-div">
  <h4><%=item.username%> (<%=item.name%>)</h4>
  <form action="/dashboard/admin/deleteuser/<%=item._id%>" method="get">
    <button type="submit" class="btn btn-danger">DELETE USER</button>
  </form>
  <form action="/dashboard/admin/resetpassword/<%=item._id%>" method="get">
    <button type="submit" class="btn btn-warning">RESET PASSWORD</button>
  </form>
</div>

<%}%> <%- include('partials/messages')%>
